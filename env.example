# ==================== LLM 配置 ====================
# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.1
DEEPSEEK_MAX_TOKENS=4000

# ==================== 微服务配置 ====================
# 财报数据服务 (HTTP) - 替代直接数据库连接
FINANCIAL_DATA_API_URL=http://localhost:8081
FINANCIAL_DATA_API_TIMEOUT=30

# ==================== 数据库配置 (已弃用，改用上面的HTTP服务) ====================
# 如果需要直接连接数据库，可以保留此配置
# DATABASE_URL=postgresql://admin:password@localhost:5432/financial_reports
# DATABASE_ECHO=False

# ==================== 向量数据库配置 ====================
# Milvus 配置 - 存储非结构化财报文本向量
# 远程 Milvus 服务器（推荐）
MILVUS_HOST=your_milvus_host
MILVUS_PORT=19530
MILVUS_USER=your_milvus_user
MILVUS_PASSWORD=your_milvus_pass


# Milvus 集合配置
MILVUS_COLLECTION_NAME=financial_reports

# ==================== Embedding 模型配置 ====================
# Embedding服务类型: local(本地模型) 或 http(HTTP服务)
EMBEDDING_SERVICE_TYPE=http

# Embedding模型配置
# 可以是 HuggingFace 模型名或本地模型路径
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
EMBEDDING_DIM=1024

# 本地模型配置 (仅当 EMBEDDING_SERVICE_TYPE=local 时使用)
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_DIR=

# HTTP服务配置 (仅当 EMBEDDING_SERVICE_TYPE=http 时使用)
EMBEDDING_API_URL=http://localhost:8080
EMBEDDING_API_TIMEOUT=60

# 其他可选模型：
# EMBEDDING_MODEL=BAAI/bge-base-zh-v1.5
# EMBEDDING_DIM=768
# EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
# EMBEDDING_DIM=512

# ==================== 应用配置 ====================
APP_NAME=财报点评系统
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# ==================== 数据源配置 ====================
# 数据源类型: database(从PostgreSQL读取) 或 excel(从Excel文件读取)
DATA_SOURCE=excel
EXCEL_DATA_DIR=./data/excel_reports

# ==================== API 服务配置 ====================
# FastAPI 后端服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ==================== Streamlit 前端配置 ====================
# Streamlit Web 界面配置
STREAMLIT_PORT=8501
API_BASE_URL=http://localhost:8000

# ==================== 文件存储配置 ====================
# 各类文件存储路径
UPLOAD_DIR=./data/uploads
REPORT_OUTPUT_DIR=./data/reports
PDF_STORAGE_DIR=./data/pdfs

# ==================== 缓存配置 ====================
# 启用缓存可以提高查询性能
ENABLE_CACHE=True
CACHE_TTL=3600

