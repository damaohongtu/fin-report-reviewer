# LLM 配置 - DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.1
DEEPSEEK_MAX_TOKENS=4000

# 数据库配置
DATABASE_URL=postgresql://admin:password@localhost:5432/financial_reports
DATABASE_ECHO=False

# 向量数据库配置 - Milvus
# 远程 Milvus 服务器（推荐使用）
MILVUS_HOST=118.195.191.165
MILVUS_PORT=19530
MILVUS_USER=admin
MILVUS_PASSWORD=pass

# 本地 Milvus（如需使用本地，修改为 localhost）
# MILVUS_HOST=localhost
# MILVUS_PORT=19530
# MILVUS_USER=
# MILVUS_PASSWORD=

# 集合配置
MILVUS_COLLECTION_NAME=financial_reports
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
EMBEDDING_DIM=1024

# Milvus Web UI: http://118.195.191.165:9091/

# 应用配置
APP_NAME=财报点评系统
APP_VERSION=1.0.0
LOG_LEVEL=INFO
MAX_WORKERS=4

# 数据源配置
# 选项: database, excel
DATA_SOURCE=excel
EXCEL_DATA_DIR=./data/excel_reports

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Streamlit 配置
STREAMLIT_PORT=8501
API_BASE_URL=http://localhost:8000

# 文件存储
UPLOAD_DIR=./data/uploads
REPORT_OUTPUT_DIR=./data/reports
PDF_STORAGE_DIR=./data/pdfs

# 缓存配置
ENABLE_CACHE=True
CACHE_TTL=3600

# Wind数据库配置（如果直接连接Wind数据库）
WIND_DB_HOST=localhost
WIND_DB_PORT=3306
WIND_DB_USER=wind_user
WIND_DB_PASSWORD=wind_password
WIND_DB_NAME=wind_financial_data

